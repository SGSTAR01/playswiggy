{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@locators/*": ["src/locators/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "utils/**/*.ts"],
  "exclude": ["node_modules"]
}
